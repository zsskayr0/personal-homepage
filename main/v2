/* Estilos do overlay */
#overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(8px); /* Aplica o blur ao elemento #overlay */
  z-index: 1;
  display: none;
}

#overlay:not(#search-container) {
  backdrop-filter: none; /* Remove o blur da barra de pesquisa */
}

#overlay.active {
  display: block;
}
